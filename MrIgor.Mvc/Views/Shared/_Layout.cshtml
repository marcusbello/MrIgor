<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduArea</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MrIgor.Mvc.styles.css" asp-append-version="true" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Manrope', sans-serif;
            background-color: #f6f6f8;
            color: #0d121b;
        }
        .bg-primary-custom {
            background-color: #135bec;
        }
        .text-primary-custom {
            color: #135bec;
        }
        .btn-white-custom {
            background-color: white;
            color: #18191aff;
            font-weight: 600;
            border: 1px solid #35363686;
        }
        .btn-white-custom:hover {
            background-color: #f0f0f0;
            color: #135bec;
            border-color: #135bec;
        }
        .nav.navbar {
            border-bottom: 1px solid #e0e0e0;
        }
       @@media (max-width: 991.98px) {
        .navbar-nav {
            margin-left: auto !important;
            margin-right: auto !important;
            text-align: center;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent border-bottom mb-3 py-0 mx-0">
            <div class="container d-flex align-items-center justify-content-between">
                <!-- LEFT: Logo -->
                <div class="navbar-brand mx-0">
                    <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.svg" alt="EduArea Logo" class="img-fluid" style="height:50px;">
                    </a>
                </div>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse " id="navbarNav">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EduArea - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
