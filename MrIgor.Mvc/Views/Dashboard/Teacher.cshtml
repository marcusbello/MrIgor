
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Teacher Dashboard";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4">Teacher Dashboard</h2>

    <div class="row g-3">
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0 p-3">
                <h5>My Subjects</h5>
                <h3 class="text-primary">5</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0 p-3">
                <h5>Students Assigned</h5>
                <h3 class="text-success">180</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0 p-3">
                <h5>Pending Grades</h5>
                <h3 class="text-warning">12</h3>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0 p-3">
                <h5>Attendance Submitted</h5>
                <h3 class="text-info">96%</h3>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card p-4 shadow-sm border-0">
                <h5>Class Performance</h5>
                <canvas id="teacherPerformanceChart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
new Chart(document.getElementById('teacherPerformanceChart'), {
    type: 'bar',
    data: {
        labels: ['Math', 'Physics', 'Chemistry', 'English', 'Biology'],
        datasets: [{
            label: 'Avg Score (%)',
            data: [85,78,92,74,88],
            backgroundColor: '#007bff'
        }]
    }
});
</script>
}