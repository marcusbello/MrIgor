<style>
    body {
        font-family: 'Manrope', sans-serif;
        background-color: #f9fafb;
    }

    .login-container {
        display: flex;
        height: 100vh;
    }

    .left-panel {
        flex: 1;
        background-color: #f1f3f9;
        @* color: #fff; *@
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 4rem;
    }

    .left-panel h2 {
        font-weight: 700;
    }

    .left-panel p {
        @* color: #dcdcdc; *@
        font-size: 1rem;
    }

    .right-panel {
        flex: 1;
        background-color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

    .login-box {
        width: 100%;
        max-width: 380px;
        background: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }

    .form-control {
        border-radius: 8px;
        padding: 0.75rem;
    }

    .btn-primary {
        border-radius: 8px;
        background-color: #0d6efd;
        border: none;
        padding: 0.75rem;
        font-weight: 600;
    }

    .btn-primary:hover {
        background-color: #0b5ed7;
    }

    .small-text {
        font-size: 0.875rem;
    }

    @@media (max-width: 768px) {
        .login-container {
            flex-direction: column;
        }

        .left-panel {
            text-align: center;
            padding: 2rem 1rem;
        }

        .right-panel {
            padding: 2rem 1rem;
        }
    }
</style>

<div class="login-container">
    <!-- Left Panel -->
    <div class="left-panel text-start">
        <div class="d-flex align-items-center mb-4">
            <img src="~/images/logo.svg" alt="EduArea Logo" class="img-fluid" style="max-height:80px;">
        </div>
        <h2>Simplifying School<br>Management.</h2>
        <p class="mt-3">
            All-in-one platform to streamline your institution’s daily operations.
        </p>
    </div>

    <!-- Right Panel -->
    <div class="right-panel">
        <div class="login-box">
            <h4 class="fw-bold mb-1">Welcome Back</h4>
            <p class="text-muted small-text mb-4">Log in to manage your school community.</p>

            <form id="account" method="post">
                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label fw-semibold">Email or Username</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                        <input asp-for="Input.Email" type="text" class="form-control" placeholder="Enter your email or username" required>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none small-text">Forgot Password?</a>
                    </div>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-lock"></i></span>
                        <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" required>
                        <button type="button" class="btn btn-outline-light border" id="togglePassword">
                            <i class="bi bi-eye-slash"></i>
                        </button>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="input-group">
                     <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
               

                <div class="d-grid mt-4">
                    <button id="login-submit" type="submit" class="btn btn-primary">Log In</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <p class="small-text mb-0">Don’t have an accoun? <a class="text-decoration-none" asp-area="Identity" asp-page="/Account/Register">Sign Up</a></p>
                <p class="small-text mb-0">Email not verified? <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Resend Email</a></p>
                @* <p class="small-text text-muted mt-3">
                    <a href="#" class="text-decoration-none text-muted">Privacy Policy</a> ·
                    <a href="#" class="text-decoration-none text-muted">Terms of Service</a>
                </p> *@
            </div>
        </div>
    </div>
</div>

<script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('[name="Input.Password"]');

    togglePassword.addEventListener('click', function () {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        this.querySelector('i').classList.toggle('bi-eye');
        this.querySelector('i').classList.toggle('bi-eye-slash');
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
